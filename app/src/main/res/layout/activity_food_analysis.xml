<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.sydney.comp5216.LoseWeightHelper.apirelated.FoodAnalysisActivity"
    android:background="@color/whiteBack"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/foodInputBox">
        <EditText
            android:id="@+id/foodInput"
            android:inputType="textEmailAddress"
            android:hint="Enter a food for search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/searchFood"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="search"
        android:textColor="@color/whiteBack"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_search_icon"
        android:background="@drawable/button_primary" />
    <ImageView
        android:id="@+id/foodAnalysisImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/shape_border"
        />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Distribution"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/Nutritionresult"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp" />



    <Button
        android:id="@+id/refresh"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="refresh"
        android:background="@drawable/button_primary"
        android:textColor="@color/whiteBack"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_refresh_icon"
        />

</LinearLayout>