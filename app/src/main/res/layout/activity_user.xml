<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="au.edu.sydney.comp5216.LoseWeightHelper.MainActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#F0A1A8"
        android:src="@drawable/renwu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_border"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Gender"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:text="Gender" />

            <TextView
                android:id="@+id/age"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Age"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/height"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Height"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/weight"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Weight"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <!--bottom part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/GenderEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="none"
                android:layout_weight="1.0"
                android:background="@null"
                android:inputType="none"
                android:textColor="@color/darkGray"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/AgeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:inputType="none"
                android:textColor="@color/darkGray"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/heightEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:text="0cm"
                android:inputType="none"

                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_horizontal"/>
            <EditText
                android:id="@+id/WeightEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:text="0kg"
                android:inputType="none"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"

        />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/makePlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_primary"
            android:textColor="@color/whiteBack"
            android:textSize="18dp"
            android:text="Make Plan"
            />
    </LinearLayout>

</LinearLayout>